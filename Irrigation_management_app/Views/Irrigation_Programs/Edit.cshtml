@model Irrigation_management_app.Models.Irrigation_ProgramsVModel

<h2>Editar Programa de Riego</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Irrigation_Program_Id" />
    <div class="form-group">
        <label asp-for="Start_Hour" class="control-label">Hora de Inicio</label>
        <input asp-for="Start_Hour" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="End_Hour" class="control-label">Hora de Fin</label>
        <input asp-for="End_Hour" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="Irrigations_Per_Week" class="control-label">Riegos por Semana</label>
        <input asp-for="Irrigations_Per_Week" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Area_Id" class="control-label">Área de Plantación</label>
        <select asp-for="Area_Id" class="form-control" asp-items="ViewBag.Areas"></select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
