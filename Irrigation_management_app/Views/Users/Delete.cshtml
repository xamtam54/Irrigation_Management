@model Irrigation_management_app.Models.UsersVModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h2>Delete Confirmed</h2>
                </div>
                <div class="card-body">
                    <p>The following user has been successfully deleted:</p>
                    <dl class="row">
                        <dt class="col-sm-4">User Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>
                        <dt class="col-sm-4">Names:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Names)</dd>
                        <dt class="col-sm-4">Surnames:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Surnames)</dd>
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                        <dt class="col-sm-4">Registration Date:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Registration_Date)</dd>
                        <dt class="col-sm-4">Is Active:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Is_Active)</dd>
                        <dt class="col-sm-4">User Type Id:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User_Type_Id)</dd>
                    </dl>
                    <form asp-action="Index">
                        <button type="submit" class="btn btn-secondary">Go back</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
