@model Water_ManagementVModel

<h2>Editar Gestión de Agua</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Water_Management_Id" />
    <div class="form-group">
        <label asp-for="Capacity" class="control-label">Capacidad</label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Collection_Hour" class="control-label">Recolección por hora</label>
        <input asp-for="Collection_Hour" class="form-control" />
        <span asp-validation-for="Collection_Hour" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Device_Id" class="control-label">Dispositivo</label>
        <select asp-for="Device_Id" class="form-control" asp-items="ViewBag.Devices"></select>
        <span asp-validation-for="Device_Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Water_Management_Type_Id" class="control-label">Tipo de Gestión de Agua</label>
        <select asp-for="Water_Management_Type_Id" class="form-control" asp-items="ViewBag.WaterManagementTypes"></select>
        <span asp-validation-for="Water_Management_Type_Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
